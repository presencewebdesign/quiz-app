        <TextInput
          value={inputValue}
          onChange={setInputValue}
          onKeyPress={handleKeyPress}
          placeholder="Enter your correction..."
          disabled={isSubmitting}
        />

        <Button
          onClick={handleSubmit}
          disabled={!inputValue.trim() || isSubmitting}
